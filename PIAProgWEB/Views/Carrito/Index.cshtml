@model IEnumerable<PIAProgWEB.Models.dbModels.Carrito>

@{
    ViewData["Title"] = "Carrito de Compras";
}

<div class="container mt-5">
    <h1 class="text-center">Carrito de Compras</h1>

    <table class="table table-bordered table-striped mt-4">
        <thead class="thead-dark">
            <tr>
                <th>Cantidad</th>
                <th>Fecha</th>
                <th>Producto</th>
                <th>Usuario</th>
                <th>Precio Unitario</th>
                <th>Subtotal</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                    <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                    <td>@Html.DisplayFor(modelItem => item.Productio.NombreProducto)</td>
                    <td>@Html.DisplayFor(modelItem => item.Usuario.Id)</td>
                    <td>@item.Productio.Precio.ToString("C")</td>
                    <td>@item.Subtotal.ToString("C")</td>
                    <td>@Html.ActionLink("Eliminar", "Delete", new { id = item.UsuarioId }, new { @class = "btn btn-danger btn-sm" })</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Sumatoria total -->
    <div class="text-right">
        <strong>Total del Carrito: @Model.Sum(item => item.Subtotal).ToString("C")</strong>
    </div>

    <div class="text-center mt-4">
        <form method="post" action="@Url.Action("RealizarCompra", "Carrito")">
            <input type="submit" value="Realizar Compra" class="btn btn-primary" />
        </form>
    </div>
</div>
