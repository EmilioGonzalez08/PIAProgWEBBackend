@{
    ViewData["Title"] = "Contactanos";
}

<div style="background-color: #f0f0f0; padding: 20px;">

    <div class="container mt-4">
        <h1 class="text-center">Contáctanos</h1>
        <p class="text-center">¿Tienes alguna pregunta? ¡Estamos aquí para ayudarte!</p>

        <!-- Redes Sociales -->
        <div class="d-flex justify-content-center align-items-center mb-4">
            <div class="social-icon mr-3">
                <a href="#">
                    <img src="https://w7.pngwing.com/pngs/296/226/png-transparent-computer-icons-facebook-inc-logo-like-button-facebook-logo-desktop-wallpaper-brand.png" alt="Facebook" style="width: 40px; height: 40px;">
                </a>
                <p style="font-size: 12px;">1989</p>
            </div>
            <div class="social-icon mr-3">
                <a href="#">
                    <img src="https://icones.pro/wp-content/uploads/2021/02/icone-twitter-ronde-noire.png" alt="Twitter" style="width: 40px; height: 40px;">
                </a>
                <p style="font-size: 12px;">@@1989</p>
            </div>
            <div class="social-icon mr-3">
                <a href="#">
                    <img src="https://cdn-icons-png.flaticon.com/512/4494/4494468.png" alt="Instagram" style="width: 40px; height: 40px;">
                </a>
                <p style="font-size: 12px;">@@1989</p>
            </div>
            <div class="social-icon">
                <a href="#">
                    <img src="https://c0.klipartz.com/pngpicture/956/387/gratis-png-logotipo-de-telefono-negro-redondo-icono-de-telefono-archivo-de-telefono.png" alt="Telefono" style="width: 40px; height: 40px;">
                </a>
                <p style="font-size: 12px;">123456111</p>
            </div>
        </div>

        <!-- Formulario de Contacto -->
        <form>
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="nombre" required>
            </div>
            <div class="mb-3">
                <label for="correo" class="form-label">Correo Electrónico</label>
                <input type="email" class="form-control" id="correo" required>
            </div>
            <div class="mb-3">
                <label for="mensaje" class="form-label">Mensaje</label>
                <textarea class="form-control" id="mensaje" rows="4" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Enviar Mensaje</button>
        </form>
    </div>

</div>
