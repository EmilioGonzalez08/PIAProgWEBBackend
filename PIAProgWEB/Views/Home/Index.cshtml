@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron text-center">
    <h1 class="display-4">Bienvenido a 1989!</h1>
    <p class="lead">El lugar donde las prendas de segunda mano cuentan historias perdidas.</p>
    <div class="container mt-4">
        <div class="jumbotron">
            <!-- Carrusel de imágenes -->
            <div class="container mt-4">
                <h2 class="text-center mb-4">Explora Nuestro Catálogo</h2>
                <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="IMG/parachute.jpg" class="d-block w-100" alt="Imagen 1">
                        </div>
                        <div class="carousel-item">
                            <img src="IMG/pants.jpg" class="d-block w-100" alt="Imagen 2">
                        </div>
                        <!-- Agregar más imágenes según sea necesario -->
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Anterior</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Siguiente</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
