@model IEnumerable<PIAProgWEB.Models.dbModels.Orden>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("Admin"))
{
    <label for="selectUsuario">Seleccionar Usuario:</label>
    <select id="selectUsuario">
        <!-- Opciones de usuarios se cargarán mediante Ajax -->
    </select>
    <a asp-action="Create" asp-controller="EstadoOrden">Agregar Estados de Orden</a>
}

<label for="selectOrden">Seleccionar Orden:</label>
<select id="selectOrden">
    <option value="0">Todas las órdenes</option>
    <!-- Opciones de órdenes se cargarán mediante Ajax -->
</select>

<table id="ordenesTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoOrdenNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrdenId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="tableBody">
        @foreach (var item in Model)
        {
            <tr data-usuario-id="@item.Usuario.Id" data-orden-id="@item.OrdenId">
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoOrdenNavigation.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrdenId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OrdenId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.OrdenId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.OrdenId">Delete</a>
                </td>
            </tr>
        }
    </tbody>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        $(document).ready(function () {
            // Cargar la lista de usuarios al select mediante Ajax
            $.ajax({
                url: '/Ordens/ObtenerUsuarios',
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    console.log("Datos de usuarios recibidos:", data);

                    var selectUsuario = $('#selectUsuario');
                    $.each(data, function (index, usuario) {
                        selectUsuario.append('<option value="' + usuario.id + '">' + usuario.nombre + '</option>');
                    });

                    // Manejar el cambio en el select de usuarios para cargar órdenes correspondientes
                    selectUsuario.on('change', function () {
                        cargarOrdenes();
                    });

                    // Cargar órdenes iniciales
                    cargarOrdenes();
                },
                error: function (error) {
                    console.log("Error en la solicitud AJAX de usuarios:", error);
                }
            });

            function cargarOrdenes() {
                var usuarioId = $('#selectUsuario').val();

                // Cargar la lista de órdenes al select mediante Ajax
                $.ajax({
                    url: '/Ordens/ObtenerOrdenesPorUsuario?usuarioId=' + usuarioId,
                    type: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        console.log("Datos de órdenes recibidos:", data);

                        var selectOrden = $('#selectOrden');
                        selectOrden.empty();
                        selectOrden.append('<option value="0">Todas las órdenes</option>');

                        $.each(data, function (index, orden) {
                            selectOrden.append('<option value="' + orden.ordenId + '">' + orden.ordenId + '</option>');
                        });

                        // Manejar el cambio en el select de órdenes para filtrar las órdenes
                        selectOrden.on('change', function () {
                            var ordenId = $(this).val();
                            filtrarOrdenes(usuarioId, ordenId);
                        });
                    },
                    error: function (error) {
                        console.log("Error en la solicitud AJAX de órdenes:", error);
                    }
                });
            }

            function filtrarOrdenes(usuarioId, ordenId) {
                $('#tableBody tr').hide();

                if (ordenId === '0') {
                    // Mostrar todas las órdenes del usuario seleccionado
                    $('#tableBody tr[data-usuario-id="' + usuarioId + '"]').show();
                } else {
                    // Mostrar solo la orden seleccionada
                    $('#tableBody tr[data-usuario-id="' + usuarioId + '"][data-orden-id="' + ordenId + '"]').show();
                }
            }
        });
    </script>
</table>